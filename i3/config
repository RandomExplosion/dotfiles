###########
# GENERAL #
###########

# Don't use xwayland (gross)
xwayland disable

# Fix for GTK Apps loading slowly
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK

# Set up Clipboard for use across windows (SWAY ONLY)
exec wl-paste -t text --watch clipman store --no-persist

# Launch Bottom Bar
exec eww reload
exec eww open bottombar

# Launch Dropbox
exec dropbox

# Application preferences
# Terminal Emulator
set $term alacritty
set $launcher tofi-drun 

# Set Compose Key to PrtScr
exec swaymsg 'input * xkb_options compose:prsc'

##############
# APPEARANCE #
##############

# Load cached pywal colours
include "$HOME/.cache/wal/colors-sway"

# Set cached pywal colours
client.focused $color0 $background $foreground $color7 $background

# Background set later in # OUTPUTS #

# Font for window titles
font pango:Fira Code Nerd Font Bold 10

# Gaps
gaps outer 4
gaps inner 8

# Borders
default_border pixel 1

######################
# INPUT - (SWAY ONLY)#
######################

# List Inputs with $ swaymsg -t get_inputs
# see `man 5 sway-input`

# HP ELITEBOOK Touchpad
input "1739:52761:SYNA30B7:00_06CB:CE19_Touchpad" {
    dwt enabled
    tap enabled
    natural_scroll disabled
    middle_emulation enabled
}

# DELL XPS Touchpad
input "2:7:SynPS/2_Synaptics_TouchPad" {
    dwt enabled
    tap disabled
    natural_scroll enabled
    middle_emulation enabled
}

#input * natural_scroll enabled

########################
# OUTPUT - (SWAY ONLY) #
########################

# List Outputs with $ sway-msg -t get_outputs
output eDP-1 resolution 3840x2160 position 3840,0 

output HDMI-A-1 resolution 1920x1080

# Set Wallpaper (path read from pywal cache in # APPEARANCE #)
output "*" background $wallpaper fill

#####################
# IDLE - (SWAY ONLY)#
#####################

#Lock screens after 300 seconds inactivity
#Turn off screens after another 300 seconds
#The screen will wake up when the period of inactivity ends
# The screen will also lock before the device goes to sleep
exec swayidle -w \
    timeout 300 'swaylock -f -i "$wallpaper" --effect-blur 10x1'\
    timeout 300 'swaymsg "output * power off"'\
     resume 'swaymsg "output * power on"' \
    before-sleep 'swaylock -f -i "$wallpaper" --effect-blur 10x1'

#############################
# KEYBINDS - MOVE AND FOCUS #
#############################

# Use super (windows) key as mod
set $mod Mod4
# Use alt key as alt
set $alt Mod1

# Use the home row (vim) direction keys
set $left h
set $right l
set $down j
set $up k

# Change focus
bindsym $mod+$left  focus left
bindsym $mod+$right focus right
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up

# Move focused window
bindsym $mod+Shift+$left  move left
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+$down  move down
bindsym $mod+Shift+$up    move up

# Switch Workspaces
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10


# Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
floating_modifier $mod

# Move focused window to scratchpad (minimising)
bindsym $mod+Shift+minus move scratchpad

# Show next scratchpad window
bindsym $mod+minus scratchpad show

#####################
# KEYBINDS - LAYOUT #
#####################

# Split vertical and horizontal
bindsym $mod+b splith
bindsym $mod+v splitv

# Switch container layout style
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle fullscreen
bindsym $mod+f fullscreen

# Toggle tiling/floating
bindsym $mod+Shift+space floating toggle

# Move focus between tiling and floating areas
bindsym $mod+space focus mode_toggle

# Move focus to parent container
bindsym $mod+a focus parent

# TODO: RESIZE

######################
# KEYBINDS - GENERAL #
######################

# Terminal Quick Launch
bindsym $mod+Return exec --no-startup-id $term

# Obsidian Quick Launch
bindsym $mod+o exec --no-startup-id obsidian

# Firefox Quick Launch
bindsym $mod+Shift+w exec --no-startup-id firefox

# Take Screenshots
bindsym $mod+Shift+s exec --no-startup-id flameshot gui

# Reload Config
bindsym $mod+Shift+c reload

# Restart i3/(May or may not work for sway)
bindsym $mod+$alt+c restart

# Application Launcher
bindsym $mod+d exec tofi-drun --drun-launch=true

# Kill focused window
bindsym $mod+c kill

